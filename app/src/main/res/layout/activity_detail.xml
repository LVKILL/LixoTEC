<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color">

    <TextView
        android:id="@+id/TextViewDateHour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="28/05/2019 - 14:00"
        android:textColor="@color/text_white_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/TextViewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TextViewDateHour"
        android:layout_marginTop="5dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="Luis Antônio Villar Reis"
        android:textColor="@color/text_white_color"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        />

    <View
        android:id="@+id/SeparatorLineOne"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_white_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TextViewName"
        android:layout_marginTop="5dp"
        />

    <ImageView
        android:id="@+id/ImageViewLocationIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SeparatorLineOne"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/TextViewLocation"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Av. Araucária, 7801 - Vila A, Foz do Iguaçu- PR, 85860-000"
        android:gravity="center_horizontal"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
        android:textColor="@color/text_white_color"
        app:layout_constraintStart_toEndOf="@+id/ImageViewLocationIcon"
        app:layout_constraintTop_toTopOf="@+id/SeparatorLineOne" />

    <View
        android:id="@+id/SeparatorLineTwo"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ImageViewLocationIcon"
        android:layout_marginTop="20dp"
        android:background="@color/text_white_color"
        />

    <TextView
        android:id="@+id/TextViewComplemento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:text="Apartamento 703 "
        android:textColor="@color/text_white_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SeparatorLineTwo"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:id="@+id/ImageViewColeta"
        android:layout_width="340dp"
        android:layout_height="360dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TextViewComplemento"
        app:layout_constraintBottom_toTopOf="@id/ButtonOpenMap"
        android:scaleType="centerCrop"

            />

    <Button
        android:id="@+id/ButtonOpenMap"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_squared_return"
        android:text="ABRIR NO MAPA"
        android:textColor="@color/text_white_color"
        app:layout_constraintLeft_toRightOf="@id/ButtonMarkAsDone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        />

    <Button
        android:id="@+id/ButtonMarkAsDone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_squared_return"
        android:text="@string/button_mark_as_done"
        android:textColor="@color/text_white_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ButtonOpenMap"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />

    <ProgressBar
        android:id="@+id/ProgressCircle"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        />


</android.support.constraint.ConstraintLayout>