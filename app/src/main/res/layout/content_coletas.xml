<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="@color/background_color"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_coletas"
    xmlns:tools="http://schemas.android.com/tools"
    >



    <android.support.v7.widget.CardView
        android:id="@+id/CardViewToday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#707070"
        android:clickable="true"
        card_view:cardCornerRadius="2dp"
        card_view:cardBackgroundColor="#707070"
        card_view:cardElevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/CardViewTomorrow"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="50dp"
        android:foreground="?android:attr/selectableItemBackground"

        >

        <Button
            android:id="@+id/ButtonToday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_squared_return"
            android:text="@string/button_today"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/CardViewTomorrow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#707070"
        android:clickable="true"
        card_view:cardCornerRadius="2dp"
        card_view:cardBackgroundColor="#707070"
        card_view:cardElevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/CardViewToday"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="50dp"
        android:foreground="?android:attr/selectableItemBackground">

        <Button
            android:id="@+id/ButtonTomorrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_squared_return"
            android:text="@string/button_tomorrow"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            />

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/ButtonAnotherDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_squared_return"
        android:text="@string/button_another_day"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CardViewTomorrow"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        />

    <TextView
        android:id="@+id/TextViewLabelColetas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_view_free_times_label"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        app:layout_constraintTop_toBottomOf="@id/ButtonAnotherDay"
        android:visibility="invisible"
        android:gravity="center"
        android:fontFamily="sans-serif-condensed"/>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclerViewColetas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/TextViewLabelColetas"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="15dp"

        android:layout_marginBottom="10dp"
        tools:listitem="@layout/item_list_address"
        android:visibility="invisible"
        >


    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/ButtonContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_squared_return"
        android:text="@string/button_continue"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@android:color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:visibility="invisible"
        />

    <ProgressBar
        android:id="@+id/ProgressCircle"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ButtonAnotherDay"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        />



</android.support.constraint.ConstraintLayout>