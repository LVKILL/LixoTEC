<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activities.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:background="@color/background_color"
    >

    <TextView
        android:id="@+id/TextViewWelcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="@string/text_view_welcome_message"
        android:textColor="@color/text_white_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        />

    <LinearLayout
        android:id="@+id/LayoutFirstButton"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/CenterVerticalLine"
        app:layout_constraintEnd_toStartOf="@id/LayoutSecondButton"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rectangle_background"
        >

        <ImageView
            android:layout_width="72dp"
            android:layout_height="68dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_agendamento"
            tools:srcCompat="@drawable/ic_agendamento" />

        <TextView
            android:id="@+id/TextViewAgendarColeta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|bottom"
            android:text="@string/text_view_first_main_button"
            android:textColor="@android:color/white"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutSecondButton"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/CenterVerticalLine"
        app:layout_constraintStart_toEndOf="@id/LayoutFirstButton"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rectangle_background"
        >

        <ImageView
            android:layout_width="71dp"
            android:layout_height="61dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_points"
            tools:srcCompat="@drawable/ic_points" />
        <TextView
            android:id="@+id/TextViewColetaPoints"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|bottom"
            android:text="@string/text_view_second_main_button"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <View
        android:id="@+id/CenterVerticalLine"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:visibility="invisible"/>

    <LinearLayout
        android:id="@+id/LayoutThirdButton"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/CenterVerticalLine"
        app:layout_constraintEnd_toStartOf="@id/LayoutFourthButton"
        android:layout_marginTop="15dp"
        android:background="@drawable/rectangle_background"
        >

        <ImageView
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_history"
            tools:srcCompat="@drawable/ic_history" />

        <TextView
            android:id="@+id/TextViewConsultColetas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|bottom"
            android:text="@string/text_view_third_main_button"
            android:textColor="@android:color/white"/>

        </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutFourthButton"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:orientation="vertical"
        android:background="@drawable/rectangle_background"
        app:layout_constraintStart_toEndOf="@id/LayoutThirdButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/CenterVerticalLine"
        android:layout_marginTop="15dp"
        >

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            app:srcCompat="@drawable/ic_iconeatualizacadastro"
            tools:srcCompat="@drawable/ic_iconeatualizacadastro"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/TextViewUpdateRegister"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|bottom"
            android:text="@string/text_view_fourth_main_button"
            android:textColor="@android:color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutFifthButton"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LayoutThirdButton"
        android:layout_marginTop="15dp"
        android:background="@drawable/rectangle_background"
        >

        <ImageView
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_iconeceritificado"
            tools:srcCompat="@drawable/ic_iconeceritificado" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|bottom"
            android:text="@string/text_view_fifth_main_button"
            android:textColor="@android:color/white"/>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>